{
  "name": "nj-codes",
  "version": "0.1.0",
  "description": "My website and blog",
  "main": "public/main.js",
  "scripts": {
    "clean": "rrun tasks/clean",
    "copy": "rrun tasks/copy",
    "css": "rrun tasks/css",
    "watch": "node tasks/watch.js",
    "js:dev": "webpack -w",
    "js:client": "webpack --config webpack-client.js -p",
    "js:server": "webpack --config webpack-server.js",
    "js": "run-s js:client js:server",
    "server:dev": "nodemon -w dist/server.js dist/server.js",
    "dev": "run-s clean copy && run-p js:dev css watch server:dev",
    "server": "node dist/server.js",
    "build": "NODE_ENV=production run-s copy css js",
    "start": "NODE_ENV=production node dist/server.js",
    "deploy": "now --dotenv && now alias"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.4",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "brotli-webpack-plugin": "^0.4.1",
    "chalk": "^2.1.0",
    "chokidar": "^1.7.0",
    "node-sass": "^4.5.3",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.1",
    "postcss": "^6.0.12",
    "postcss-split-mq": "^1.3.0",
    "rrun": "^1.0.4",
    "shelljs": "^0.7.8",
    "webpack-bundle-analyzer": "^2.9.0",
    "webpack-manifest-plugin": "^1.3.2"
  },
  "dependencies": {
    "apicache": "^1.1.0",
    "dotenv": "^4.0.0",
    "express": "^4.16.1",
    "express-static-gzip": "^0.3.0",
    "front-matter": "^2.3.0",
    "graphql-request": "^1.4.0",
    "helmet": "^3.8.2",
    "marked": "^0.3.12",
    "node-fetch": "^1.7.3",
    "prismjs": "^1.11.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router-config": "^1.0.0-beta.4",
    "react-router-dom": "^4.2.2",
    "rss": "^1.2.2",
    "webpack": "^3.8.1",
    "whatwg-fetch": "^2.0.3",
    "wicg-focus-ring": "^2.0.2"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "now": {
    "alias": "nj.codes"
  },
  "author": "Nathan Jacobs",
  "license": "MIT"
}
